libs :=singa glog protobuf

.PHONY: all download create

HDFS_DIR := hdfs://node0:9000/examples/lstm/a/b

download: Activity Recognition-zip

Activity Recognition-zip:
	wget http://archive.ics.uci.edu/ml/machine-learning-databases/00287/Activity%20Recognition%20from%20Single%20Chest-Mounted%20Accelerometer.zip 

create:
	$(CXX) create_data.cc -std=c++11 -lsinga -lprotobuf -lglog \
		-I../../include -L../../.libs/ -Wl,-unresolved-symbols=ignore-in-shared-libs \
		-Wl,-rpath=../../.libs/  -o create_data.bin
	./create_data.bin new-csv .
	








